<VatRecipes>
	<recipeGroup name="XP Essence conversion" > <!-- Required for EnderIO to function correctly. -->
		<recipe name="Liquid XP" energyCost="2000" allowMissing="false" >
		  <input>
			<itemStack oreDictionary="sand" slot="0" multiplier="0.25" />
			<fluidStack name="mobessence" multiplier="2" />
		  </input>
		  <output>
			<fluidStack name="xpjuice" />
		  </output>
		</recipe>
		<recipe name="Mob Essence" energyCost="2000" allowMissing="false" >
		  <input>
			<itemStack oreDictionary="sand" slot="0" multiplier="1" />
			<fluidStack name="xpjuice" multiplier="2" />
		  </input>
		  <output>
			<fluidStack name="mobessence" />
		  </output>
		</recipe>
	</recipeGroup>
</VatRecipes>
